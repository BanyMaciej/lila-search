#!/bin/sh

REMOTE=$1
REMOTE_DIR="/home/lila-search-v3"

echo "Deploy to server $REMOTE:$REMOTE_DIR"

sbt ";app/stage;exit"
if [ $? != 0 ]; then
  echo "Deploy canceled"
  exit 1
fi

RSYNC_OPTIONS=" \
  --archive \
  --no-o --no-g \
  --force \
  --delete \
  --progress \
  --compress \
  --checksum \
  --verbose \
  --exclude RUNNING_PID \
  --exclude '.git/'"

stage="modules/app/target/universal/stage"
include="bin $stage/bin $stage/lib"
rsync_command="rsync $RSYNC_OPTIONS $include $REMOTE:$REMOTE_DIR"
echo "$rsync_command"
$rsync_command
echo "rsync complete"

read -n 1 -p "Press [Enter] to continue."

echo "Restart lila-search-v3"
ssh $REMOTE "chown -R lila-search-v3:lila-search-v3 /home/lila-search-v3 && systemctl restart lichess-search-v3"

echo "Deploy complete"
